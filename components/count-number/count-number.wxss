/**index.wxss**/
page {
	width:100%;
	height: 100%;
}
.wrap-count {
	/* width:170rpx; */
	height: 52rpx;
	display: flex;
	align-items: center;
	border-radius:6rpx;
}
/* 加号和减号 */
.wrap-count view {
	float: left;
	width:68rpx;
	height: 52rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	border:1px solid #eee;
}
.wrap-count input {
	width:70rpx;
	height: 52rpx;
	float: left;
	margin:0 auto;
	text-align: center;
	font-size: 28rpx;
	/* border-left:2rpx solid #ccc;
	border-right:2rpx solid #ccc; */
}
.wrap-count .normal {
	color:#333;
}
.wrap-count .disabled {
	color:#ccc;
}
.count-image {
	width:28rpx;
}