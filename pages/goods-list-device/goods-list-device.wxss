/**index.wxss**/
page {
	width:100%;
	height: 100%;
	line-height: 1;
}
.container {
	height: 100%;
}

.shop-list {
	width:100%;
}
.shop-item {
	padding:28rpx 24rpx;
	border-bottom:2rpx solid #eee;
}
.shop-item:last-child {
	/* border-bottom: 0; */
	}
.shop-item-info {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
.shop-item-top {
	/* padding-top:10rpx; */
}
.shop-name {
	font-size: 30rpx;
	color:#333;
	font-weight: 500;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	overflow: hidden;
	line-height: 36rpx;
}
.shop-location {
	margin-top:12rpx;
}
.shop-location,.shop-status {
	font-size: 28rpx;
	color:#666;
	display: flex;
	align-items: center;
}
.shop-status {
	margin-top:10rpx;
}
.shop-item-bottom {
	display: flex;
	justify-content: flex-end;
}
.scroll-view {
	position: absolute;
	top:0;
	left:0;
	right:0;
	bottom:0;
}
