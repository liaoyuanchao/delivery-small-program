/**index.wxss**/
page {
	width:100%;
	height: 100%;
	background-color: #f9f6f3;
}
.container {
	height: 100%;
}
.page-bg {
	height: 200rpx;
	width:100%;
	background-color: #fd8003;
	position: fixed;
	z-index: -1;
}

.button-area {
	margin-top:100rpx;
  width: 100%;
  text-align:center;
  display: block;
}

.button {
	width:400rpx;
	height: 100rpx;
  line-height: 100rpx;
	display: inline-block;
	align-items: center;
	justify-content: center;
	border-radius:100rpx;
	border:none;
	outline: none;
	overflow: hidden;
	background-color: transparent;
	font-size: 34rpx;
	color:#fff;
	background: linear-gradient(to right,#ff8355,#fe592f);
	box-shadow: 0px 8rpx 10rpx #ffcdc0;
}

.wrap-content {	
	position: absolute;
	top:60rpx;
	bottom:0;
	left:0;
	right:0;
	padding:0 20rpx;
	
}
.wrap-content-inner {
	background-color: #fff;
	height: 100%;
}
.user-info {
	position: relative;
	top:-56rpx;
	left:50%;
	transform: translateX(-50%);
	text-align: center;
}
.user-image {
	margin:0 auto;
	width:124rpx;
	height: 124rpx;
	border:6rpx solid #fff;
	border-radius: 50%;
	overflow: hidden;
}
.user-image image {
	width:100%;
}
.shop-name {
	font-size: 28rpx;
	color:#333;
	margin:4rpx 0;
}
.user-name {
	font-size: 28rpx;
	color:#999;
}

.user-item-list {
	margin-top:-16rpx;
	border-top:2rpx solid #efefef;
}
.user-item {
	border-bottom:2rpx solid #efefef;
}
.user-item-link {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding:28rpx;
}
.item-icon {
	width:56rpx;
	height: 56rpx;
	border-radius:50%;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-right:20rpx;
}
.item-icon1 {
	background-color: #fe592f;
}
.item-icon1 image {
	width:31rpx;
}
.item-icon2 {
	background-color: #7693ff;
}
.item-icon2 image {
	width:33rpx;
}
.item-name {
	flex: 1;
	font-size: 28rpx;
	color:#333333;
}
.right-more {
	width:14rpx;
}