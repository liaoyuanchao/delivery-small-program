/**index.wxss**/
page {
	width:100%;
	height: 100%;
	background-color: #FFF;
}
.container {
	height: 100%;
}
.page-bg {
	height: 200rpx;
	width:100%;
	background-color: #fd8003;
	position: fixed;
	z-index: -1;
}

.wrap-content {	
	bottom:0;
	left:0;
	right:0;
}
.wrap-content-inner {
	background-color: #fff;
	height: 100%;
}
.user-info {
	position: relative;
	top:-56rpx;
	left:50%;
	transform: translateX(-50%);
	text-align: center;
}
.user-image {
	margin:0 auto;
	width:124rpx;
	height: 124rpx;
	border:6rpx solid #fff;
	border-radius: 50%;
	overflow: hidden;
}
.user-image image {
	width:100%;
}
.shop-name {
	font-size: 28rpx;
	color:#333;
	margin:4rpx 0;
}
.user-name {
	font-size: 28rpx;
	color:#999;
}

.user-item-list {
	border-top:2rpx solid #efefef;
}
.user-item-link {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding:50rpx;
}
.item-icon {
	width:56rpx;
	height: 56rpx;
	border-radius:50%;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-right:20rpx;
}
.item-icon1 {
	background-color: #fe592f;
}
.item-icon1 image {
	width:31rpx;
}
.item-icon2 {
	background-color: #7693ff;
}
.item-icon2 image {
	width:33rpx;
}
.item-name {
	flex: 1;
	font-size: 28rpx;
	color:#333333;
}
.right-more {
	width:14rpx;
}

.num {
  float: right;
  width: 24px;
  height: 24px;
  margin-right: 20px;
  line-height: 24px;
  text-align: center;
  border-radius: 16px;
  font-size: 9px;
  font-weight: 700;
  color: #fff;
  background: #fd8003;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.4);
}