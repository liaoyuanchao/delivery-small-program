/**index.wxss**/
page {
	width:100%;
	height: 100%;
}
.container {
	height: 100%;
}
.shop-list {
	width:100%;
}
.shop-item-outer {
	padding:28rpx 24rpx;
	border-bottom:2rpx solid #eee;
}
.shop-item {
	overflow: hidden;
}
.shop-item:last-child {
	/* border-bottom: 0; */
}
.shop-image-area {
	width:240rpx;
	margin-right:28rpx;
	float: left;
}
.shop-image {
	width:240rpx;
	height: 240rpx;
	border-radius:8rpx;
}
.choose-btn {
	height: 40rpx;
	width:98rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	color:#f03136;
	border:2rpx solid #f03136;
	font-size: 24rpx;
	margin:14rpx auto 0;
}
.shop-item-info {
	/* height: 240rpx; */
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
.shop-item-top {
	/* padding-top:10rpx; */
}
.shop-name {
	font-size: 29rpx;
	color:#333;
	font-weight: 500;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	overflow: hidden;
	line-height: 36rpx;
	margin-bottom:4rpx;
}
.tips {
	font-size: 22rpx;
	color:#f03136;
}
.margin-around {
	margin:6rpx 0;
}
.shop-location,.shop-status {
	font-size: 26rpx;
	color:#666;
	display: flex;
	align-items: center;
}
.change-input {
	width:110rpx;
	border:2rpx solid #f5f5f5;
	height: 30rpx;
	margin-right:10rpx;
	padding-left:10rpx;
}
.common-width-text text{
	display: inline-block;
	width:116rpx;
}

.shop-status {
	margin-top:10rpx;
}
.shop-item-bot {
	display: flex;
	align-items: center;
	justify-content: space-between;
	margin-top:10rpx;
}
.machine-name {
	font-size: 24rpx;
	color:#666;
	text-align: center;
	width:200rpx;
}
