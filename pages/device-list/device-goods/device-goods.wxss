/**index.wxss**/
page {
	width:100%;
	height: 100%;
}
.container {
	height: 100%;
}
.operator-btns {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding:26rpx;
	box-shadow: 0px 2rpx 5rpx #eee;
}
.operator-btns view {
	flex: 1;
	display: flex;
	align-items: center;
	justify-content: center;
	height: 90rpx;
	border:2rpx solid #fff1e4;
	font-size: 28rpx;
	color:#666;
}
.operator-btns view:last-child {
	margin-left: 32rpx;
}
.btn-image {
	width:54rpx;
	margin-right:24rpx;
}




.shop-list {
	width:100%;
}
.shop-item-outer {
	padding:28rpx 24rpx;
	border-bottom:2rpx solid #eee;
}
.shop-item {
	overflow: hidden;
}
.shop-item:last-child {
	/* border-bottom: 0; */
	}
	
.shop-item-image {
	float: left;
	margin-right:28rpx;
	
}	
	
.shop-item-info {
	/* height: 240rpx; */
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
.shop-item-top {
	/* padding-top:10rpx; */
}
.shop-name {
	font-size: 29rpx;
	color:#333;
	font-weight: 500;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	overflow: hidden;
	line-height: 36rpx;
}
.margin-around {
	margin:6rpx 0;
}
.shop-location,.shop-status {
	font-size: 26rpx;
	color:#666;
	display: flex;
	align-items: center;
}
.change-input {
	width:110rpx;
	border:2rpx solid #f5f5f5;
	height: 30rpx;
	margin-right:10rpx;
	padding-left:10rpx;
}
.common-width-text text{
	display: inline-block;
	width:116rpx;
}

.shop-status {
	margin-top:10rpx;
}
.shop-item-bot {
	display: flex;
	align-items: center;
	justify-content: flex-end;
	margin-top:10rpx;
}
.machine-name {
	font-size: 24rpx;
	color:#666;
	text-align: center;
	width:200rpx;
	margin-top:12rpx;
}

.scroll-view {
	position: absolute;
	top:142rpx;
	left:0;
	right:0;
	bottom:0;
}
