/**index.wxss**/
page {
	width:100%;
	height: 100%;
}
.container {
	height: 100%;
}
.shop-list {
	width:100%;
}
.shop-item {
	padding:28rpx 24rpx;
	border-bottom:2rpx solid #eee;
}
.shop-item:last-child {
	/* border-bottom: 0; */
}
.shop-item-info {
	/* height: 200rpx; */
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
.shop-item-top {
	padding-top:10rpx;
}
.shop-name {
	font-size: 30rpx;
	color:#333;
	font-weight: 500;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	overflow: hidden;
	line-height: 36rpx;
}
.shop-location {
	margin:4rpx 0;
}
.shop-location,.shop-status {
	font-size: 28rpx;
	color:#666;
}
.shop-item-bottom {
	display: flex;
	justify-content: flex-end;
}

.user-item-list {
	border-top:2rpx solid #efefef;
}
.user-item-link {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding:35rpx;
}
.item-icon {
	width:56rpx;
	height: 56rpx;
	border-radius:50%;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-right:20rpx;
}
.item-icon1 {
	background-color: #fe592f;
}
.item-icon1 image {
	width:31rpx;
}
.item-icon2 {
	background-color: #7693ff;
}
.item-icon2 image {
	width:33rpx;
}
.item-name {
	flex: 1;
	font-size: 36rpx;
	color:#686765;
}
.right-more {
	width:14rpx;
}

.num {
  float: right;
  width: 24px;
  height: 24px;
  margin-right: 20px;
  line-height: 24px;
  text-align: center;
  border-radius: 16px;
  font-size: 9px;
  font-weight: 700;
  color: #fff;
  background:#fd8003;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.4);
}